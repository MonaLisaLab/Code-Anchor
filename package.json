{
  "name": "code-anchor",
  "displayName": "Code Anchor",
  "description": "Mark code locations, save them in the sidebar, and jump to them anytime.",
  "version": "0.0.1",
  "publisher": "t-myk",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-anchor.addAnchor",
        "title": "Add Code Anchor"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "code-anchor-view-container",
          "title": "Code Anchor",
          "icon": "resources/anchor.svg"
        }
      ]
    },
    "views": {
      "code-anchor-view-container": [
        {
          "id": "codeAnchorView",
          "name": "Anchors"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "code-anchor.addAnchor",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "code-anchor.editAnchor",
          "when": "view == codeAnchorView",
          "group": "inline"
        },
        {
          "command": "code-anchor.deleteAnchor",
          "when": "view == codeAnchorView",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.88.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "typescript": "^5.4.5",
    "glob": "^10.3.12",
    "mocha": "^10.4.0",
    "ts-loader": "^9.5.1",
    "uuid": "^9.0.1",
    "@types/uuid": "^9.0.8"
  }
} 